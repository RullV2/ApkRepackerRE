<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="wrap_content"
    android:layout_width="match_parent"
    android:paddingLeft="16dp"
    android:paddingTop="8dp"
    android:paddingRight="16dp"
    android:paddingBottom="8dp"
    android:background="@drawable/selectable_background">

    <ImageView
        android:id="@+id/list_item_image"
        android:layout_width="44dp"
        android:layout_height="44dp"
        android:layout_marginEnd="16dp"
        android:scaleType="centerCrop"
        tools:ignore="ContentDescription"
        tools:srcCompat="@drawable/ic_directory" />

    <TextView
        android:id="@+id/list_item_name"
        style="@style/Text.Subhead"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_toEndOf="@+id/list_item_image"
        android:gravity="bottom"
        tools:text="File Name" />

    <!--<TextView
        android:id="@+id/list_item_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/list_item_name"
        android:layout_marginBottom="4dp"
        android:layout_toRightOf="@+id/list_item_image"
        tools:text="Folder"
        android:textColor="?android:attr/textColorSecondary"
        android:visibility="gone" />-->

    <TextView
        android:id="@+id/list_item_size"
        style="@style/Text.Body1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/list_item_name"
        android:layout_marginEnd="8dp"
        android:layout_toStartOf="@+id/list_item_date"
        android:layout_toEndOf="@+id/list_item_image"
        tools:text="10mb" />

    <TextView
        android:id="@+id/list_item_date"
        style="@style/Text.Body1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/list_item_name"
        android:layout_alignParentEnd="true"
        tools:text="22/07/20" />

</RelativeLayout>